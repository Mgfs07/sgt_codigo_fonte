<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.9.xsd">

    <changeSet id="202204111014-3" author="fabio.formentini">
        <createTable tableName="status_acao" remarks="Entidade para representar o status das ações de uma ocorrência">
            <column name="id" type="INT" remarks="Chave primária da tabela status_acao">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_status_acao"/>
            </column>
            <column name="descricao" type="VARCHAR(255)" remarks="Breve descrição do status cadastrado"/>
        </createTable>
    </changeSet>
</databaseChangeLog>
