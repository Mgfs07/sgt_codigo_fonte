<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.9.xsd">

    <changeSet id="202204111257 - 1" author="leonardo.inacio">
        <createTable tableName="cliente" remarks="Entidade para representar os clientes/contratos">
            <column name="id" type="BIGINT" remarks="Chave primária da tabela cliente">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_cliente"/>
            </column>
            <column name="nome" type="VARCHAR(255)" remarks="Nome do cliente cadastrado">
                <constraints nullable="false"/>
            </column>
            <column name="descricao" type="VARCHAR(255)" remarks="Breve descrição do cliente cadastrado">
                <constraints nullable="false"/>
            </column>
            <column defaultValueBoolean="true" name="ativo" type="boolean" remarks="Atributo para realizar a
                exclusão lógica do cliente"/>
            <column name="icone" type="VARCHAR(255)" remarks="Ícone do cliente"/>
        </createTable>
    </changeSet>
</databaseChangeLog>
